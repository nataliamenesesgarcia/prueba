<Page x:Class="inventario.pagina1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:inventario"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pagina1">

    <Canvas Name="canvasInicial" Height="450" Width="800"  Background="BlanchedAlmond" >
        <Frame Name="miFrame" NavigationUIVisibility="Hidden"/>
        <Label Foreground="MidnightBlue" FontSize = "40" Canvas.Left="70" FontFamily="ABADY" FontWeight="Bold">Ingrese la URL que desea consultar</Label>

        <TextBox x:Name="productoNombre" Height="90" Width="300" Canvas.Left="250" Canvas.Top="100" Background="Lavender" Foreground="MidnightBlue"
         FontSize="20" FontFamily="ABADY" BorderBrush="SteelBlue" BorderThickness="5" FontWeight="Bold" ></TextBox>

        <Button Height="90" Width="300" Canvas.Left="250" Canvas.Top="250" Background="Lavender" Foreground="MidnightBlue"
                FontSize = "40" FontFamily="ABADY" BorderBrush="SteelBlue" BorderThickness="5" FontWeight="Bold" Click="Confirmar">Confirmar</Button>

    </Canvas>
</Page>
